@page
@model LabMaterials.Pages.AddStoreTypesModel
@{
    ViewData["Title"] = "Create Store Type";
}

<!-- Breadcrumb -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4 pb-2">
    <div class="d-block mb-4 mb-md-0">
 <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-2 mb-0">
                <li class="breadcrumb-item d-flex align-items-center">
                    <img src="images/home.png" alt="Home" width="16" height="16" class="me-2" />
                    <a href="/Home" class="text-decoration-none">@Model.lblHome</a>
                </li>
                <li class="breadcrumb-item d-flex align-items-center">
                    <img src="images/management.png" alt="Home" width="16" height="16" class="me-2" />
                    <a href="/ManageUsers" class="text-decoration-none">Users</a>
                </li>
                 <li class="breadcrumb-item d-flex align-items-center">
                    <img src="images/management.png" alt="Home" width="16" height="16" class="me-2" />
                    <a href="/ViewStoreTypes" class="text-decoration-none">Warehouse Type</a>
                </li>
                <li class="breadcrumb-item d-flex align-items-center">
                    <img src="images/management.png" alt="Home" width="16" height="16" class="me-2" />
                    Add Store Type
                </li>
            </ol>
        </nav>
        <h2 class="h4">Add Store Type</h2>
    </div>
</div>


<form method="post">
    <div class="mb-3">
        <label asp-for="StoreTypeModel.StoreType" class="form-label">Store Type</label>
        <input asp-for="StoreTypeModel.StoreType" class="form-control" placeholder="Enter store type (e.g., Central)" />
        <span asp-validation-for="StoreTypeModel.StoreType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
