                }

                @* Last buttons *@
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)&StoreNumber=@Model.StoreNumber&StoreName=@Model.StoreName">&raquo;</a>
                    </li>
                   
                }

            </ul>
        </nav>
    }
}
