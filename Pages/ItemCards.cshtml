@page
@model LabMaterials.Pages.ItemCardsModel

@{
    ViewData["Title"] = "Create Item Card";
}

<h1>Create Item Card</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="ItemCard.GroupCode"></label>
        
        <select asp-for="ItemCard.ItemGroup.GroupCode" class="form-control" asp-items="ViewBag.ItemGroupId"></select>
        <span asp-validation-for="ItemCard.GroupCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ItemTypeCode"></label>
        
        <select asp-for="ItemCard.ItemType.ItemTypeCode" class="form-control" asp-items="ViewBag.ItemType"></select>
        <span asp-validation-for="ItemCard.ItemTypeCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ItemCode"></label>
        
        <select asp-for="ItemCard.Item.ItemCode" class="form-control" asp-items="ViewBag.ItemId"></select>
        <span asp-validation-for="ItemCard.ItemCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ItemName"></label>
        <input asp-for="ItemCard.ItemName" class="form-control" />
        <span asp-validation-for="ItemCard.ItemName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ItemDescription"></label>
        <textarea asp-for="ItemCard.ItemDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.UnitOfmeasure"></label>
        <input asp-for="ItemCard.UnitOfmeasure" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.Chemical"></label>
        <input asp-for="ItemCard.Chemical" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.HazardTypeName"></label>
        
        <select asp-for="ItemCard.HazardType.HazardTypeName" class="form-control" asp-items="ViewBag.HazardId"></select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ExpiryDate"></label>
        <input asp-for="ItemCard.ExpiryDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.TypeOfAsset"></label>
        <select asp-for="ItemCard.TypeOfAsset" class="form-control"
                asp-items="Html.GetEnumSelectList<LabMaterials.DB.ItemCard.AssetType>()">
            <option value="">Select asset type</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.Minimum"></label>
        <input asp-for="ItemCard.Minimum" class="form-control" type="number" />
        <span asp-validation-for="ItemCard.Minimum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ReorderLimit"></label>
        <input asp-for="ItemCard.ReorderLimit" class="form-control" type="number" />
        <span asp-validation-for="ItemCard.ReorderLimit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.Store" class="control-label"></label>
        <select asp-for="ItemCard.Store.StoreId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.QuantityReceived"></label>
        <input asp-for="ItemCard.QuantityReceived" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.DateOfEntry"></label>
        <input asp-for="ItemCard.DateOfEntry" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.RoomId"></label>
        <select asp-for="ItemCard.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ShelfId"></label>
        <select asp-for="ItemCard.ShelfId" class="form-control" asp-items="ViewBag.ShelfId"></select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.SupplierId"></label>
        <select asp-for="ItemCard.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.DocumentType"></label>
        <select asp-for="ItemCard.DocumentType" class="form-control"
                asp-items="Html.GetEnumSelectList<LabMaterials.DB.ItemCard.Receiptype>()">
            <option value="">Select type</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.ReceiptDocumentnumber"></label>
        <input asp-for="ItemCard.ReceiptDocumentnumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemCard.Item.ItemId"></label>
        <select asp-for="ItemCard.Item.ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
