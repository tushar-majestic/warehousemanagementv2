<div>
    @if (Model.Report != null)
    {
        var report = Model.Report;
        <div class="card mb-4 border-primary shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <strong>Receiving Report - Serial No: @report.SerialNumber</strong>
                <div>
                    <a asp-page="/EditReceivingReport" asp-route-id="@report.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-page="/PrintReceivingReport" asp-route-id="@report.Id" class="btn btn-sm btn-secondary">Print</a>
                    
                    <button id="PrintReport" class="btn btn-primary" >Print Test</button>

                </div>
            </div>
            <div class="card-body"  id="printArea">
                <dl class="row">
                    <dt class="col-sm-3">Fiscal Year</dt>
                    <dd class="col-sm-9">@report.FiscalYear</dd>

                    <dt class="col-sm-3">Receiving Date</dt>
                    <dd class="col-sm-9">@report.ReceivingDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3">Recipient Sector</dt>
                    <dd class="col-sm-9">@report.RecipientSector</dd>

                    <dt class="col-sm-3">Sector No.</dt>
                    <dd class="col-sm-9">@report.SectorNumber</dd>

                    <dt class="col-sm-3">Warehouse</dt>
                    <dd class="col-sm-9">@report.ReceivingWarehouse</dd>

                    <dt class="col-sm-3">Supplier</dt>
                    <dd class="col-sm-9">@report.Supplier?.SupplierName</dd>

                    <dt class="col-sm-3">Supplier Type</dt>
                    <dd class="col-sm-9">@report.Supplier?.SupplierType</dd>

                    <dt class="col-sm-3">Document No.</dt>
                    <dd class="col-sm-9">@report.DocumentNumber</dd>

                    <dt class="col-sm-3">Document Date</dt>
                    <dd class="col-sm-9">@report.DocumentDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3">Remarks</dt>
                    <dd class="col-sm-9">@report.Comments</dd>
                </dl>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Item Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody id="itemsTableBody">
                    <tr>
                            <td>Zinc</td>
                            <td>20</td>
                            <td>10</td>
                            <td>200</td>
                    </tr>
                    <tr>
                            <td>Chlorine</td>
                            <td>25</td>
                            <td>100</td>
                            <td>2500</td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">No receiving report available.</div>
    }
</div>


