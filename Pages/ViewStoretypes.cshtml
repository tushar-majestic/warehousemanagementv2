@page
@model LabMaterials.Pages.ViewStoretypesModel

@{
    ViewData["Title"] = "View Store Type";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4 pb-2">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="/ManageUsers">Users</a></li>
            <li class="breadcrumb-item active" aria-current="page">Store Types</li>
        </ol>
    </nav>



    <h1 class="mb-4">Store Types</h1>
    <div class="btn-toolbar mb-2 mb-md-0 d-flex flex-wrap">
        <!-- Back Button -->
        <div class="btn-group d-flex mx-3 ms-lg-3">
            <a asp-page="/ManageUsers" class="btn btn-secondary">&larr; Back</a>
        </div>

        <div class="btn-group d-flex mx-3 ms-lg-3">
            <a asp-page="AddStoreTypes" class="btn btn-primary">+ Add Store Type</a>
        </div>
    </div>
</div>


<div class="card border-0 shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">

            @if (!Model.StoreTypeList.Any())
            {
                <div class="alert alert-info">No store types found.</div>
            }
            else
            {
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Store Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StoreTypeList)
                        {
                            if (Model.EditId == item.StoreTypeId)
                            {
                                <form method="post" asp-page-handler="Edit">
                                <tr>
                                    <td>
                                            @item.StoreTypeId
                                        <input type="hidden" name="StoreTypeModel.StoreTypeId" value="@item.StoreTypeId" />
                                    </td>
                                    <td>
                                        <input type="text" name="StoreTypeModel.StoreType" value="@Model.StoreTypeModel.StoreType" class="form-control" />
                                        <span asp-validation-for="StoreTypeModel.StoreType" class="text-danger"></span>
                                    </td>
                                    <td class="text-center">
                                        <button type="submit" class="btn btn-sm btn-success me-1">Save</button>
                                        <button type="submit" name="cancel" value="true" class="btn btn-sm btn-secondary">Cancel</button>
                                    </td>
                                </tr>
                                </form>

                            }
                            else
                            {
                                <tr>
                                    <td>@item.StoreTypeId</td>
                                    <td>@item.StoreType</td>
                                    <td class="text-center">
                                        <form method="post" asp-page-handler="EditInit" class="d-inline">
                                            <input type="hidden" name="EditId" value="@item.StoreTypeId" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                        </form>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.StoreTypeId" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this store type?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
