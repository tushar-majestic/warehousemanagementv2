@page
@model LabMaterials.Pages.viewUserModel
@{
    <div class="py-4">

        <div class="d-flex justify-content-between w-100 flex-wrap">
            <div class="mb-3 mb-lg-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent p-2 mb-0">
                        <li class="breadcrumb-item d-flex align-items-center">
                            <img src="images/home.png" alt="Home" width="16" height="16" class="me-2" />
                            <a href="/Home" class="text-decoration-none">@Model.lblHome</a>
                        </li>
                        <li class="breadcrumb-item d-flex align-items-center">
                            <img src="images/management.png" alt="Home" width="16" height="16" class="me-2" />
                            <a href="/ManageUsers" class="text-decoration-none">@Model.lblUsers</a>
                        </li>
                        <li class="breadcrumb-item d-flex align-items-center">
                            <img src="images/management.png" alt="Home" width="16" height="16" class="me-2" />
                            @Model.lblView
                        </li>
                    </ol>
                </nav>
                <h1 class="h4">@Model.lblView</h1>
                <!-- <p class="mb-0">Dozens of reusable components built to provide buttons, alerts, popovers, and more.</p> -->
            </div>
        </div>
    </div>

   @if (Model.singleUser != null)
{
    
    <div class="row">
        <div class="col-8 mb-4 m-auto">
            <div class="card shadow-sm p-4 mb-4">
                <h3 class="card-title mb-4">User Profile</h3>
                
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">User ID:</div>
                    <div class="col-sm-9">@Model.singleUser.UserID</div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Username:</div>
                    <div class="col-sm-9">@Model.singleUser.UserName</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Full Name:</div>
                    <div class="col-sm-9">@Model.singleUser.FullName</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Email:</div>
                    <div class="col-sm-9">@Model.singleUser.Email</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Active Status:</div>
                    <div class="col-sm-9">@Model.singleUser.IsActive</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Enable/Disable:</div>
                    <div class="col-sm-9">@Model.singleUser.EnableBtnText</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">User Type:</div>
                    <div class="col-sm-9">@Model.singleUser.IsADUser</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Locked:</div>
                    <div class="col-sm-9">@Model.singleUser.IsLocked</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 font-weight-bold">Group:</div>
                    <div class="col-sm-9">@Model.singleUser.GroupName</div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger">No user found.</p>
}
   

}
