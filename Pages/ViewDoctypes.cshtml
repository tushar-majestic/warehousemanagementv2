  <div class="card border-0 shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

            @if (!Model.DocumentTypeList.Any())
            {
                <div class="alert alert-info">No document types found.</div>
            }
            else
            {
                 <table class="table table-centered table-nowrap mb-0 rounded">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Document Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DocumentTypeList)
                        {
                            if (Model.EditId == item.Id)
                            {
                                <form method="post" asp-page-handler="Edit">
                                <tr>
                                    <td>
                                        <input type="hidden" name="DocumentType.Id" value="@item.Id" />
                                            @item.Id
                                    </td>
                                    <td>
                                        <input type="text" name="DocumentType.DocType" value="@item.DocType" class="form-control" />
                                    </td>
                                    <td class="text-center">
                                        <button type="submit" class="btn btn-sm btn-success me-1">Save</button>
                                        <a asp-page="ViewDoctypes" class="btn btn-sm btn-secondary">Cancel</a>
                                    </td>
                                </tr>
                                </form>
                            }
                            else
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.DocType</td>
                                    <td class="text-center">
                                        <form method="post" asp-page-handler="EditInit" class="d-inline">
                                            <input type="hidden" name="EditId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                        </form>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this document type?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

